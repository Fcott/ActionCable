<div class="message-wr">
  <div class="messages">
    <% if @messages && @messages.any? %>
      <% @messages.each do |message| %>
      <div class="message">
        <div class="message-user">
          <%= message.user.username %>:
        </div>
        <%= message.content %>
      </div>
      <% end %>
    <% end %>
  </div>

  <div class="message-input">
    <%= form_for(@message) do |f| %>
      <%= f.text_area :content %>
      <%= f.submit "Send" %>
    <% end %>
  </div>
</div>